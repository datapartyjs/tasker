{
  "source": {
      "include": ["src", "package.json", "README.md"],
      "includePattern": ".(js)$",
      "excludePattern": "(node_modules/|docs)"
  },

  "plugins": ["plugins/markdown"],

  "opts": {
    "encoding": "utf8",
    "readme": "./README.md",
    "tutorials": "tutorials",
    "destination": "docs/",
    "recurse": true,
    "verbose": true,
    "template": "./node_modules/clean-jsdoc-theme",
    "theme_opts": {
      "homepageTitle": "tasker - dependency solving task runner",
      "title": "@dataparty/tasker",
      "sections": ["Classes", "Global", "Tutorials"],
        "default_theme": "dark",
        "displayModuleHeader": true,
        "menu": [
          {
              "title": "Github",
              "id": "github",
              "link": "https://github.com/datapartyjs/tasker"
          },
          {
              "title": "npm",
              "id": "npm",
              "link": "https://www.npmjs.com/package/@dataparty/tasker"
          }
      ],
      "meta": [
        {
            "name": "Author",
            "content": "dataparty"
        },
        {
            "name": "Description",
            "content": "dependency solving task runner for javascript"
        }
      ],
      "codepen": {
        "enable_for": ["tutorials"],
        "options": {
          "js_pre_processor": "babel"
        }
      },
      "footer": "<div style='margin-bottom: 0.5rem;'>@dataparty/tasker</div> Fork: <a href='https://datapartyjs.github.io/tasker/'>https://datapartyjs.github.io/tasker/</a><br>Built by <a href='https://www.dataparty.xyz'>dataparty</a> with ðŸ–¤"
    }
  },

  
  "markdown": {
      "hardwrap": false,
      "idInHeadings": true
  }
}